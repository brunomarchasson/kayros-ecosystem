{
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": false,
  "editor.tabSize": 2,
  "jest.jestCommandLine": "yarn jest",
  "jestrunner.enableYarnPnpSupport": true,
  "files.exclude": {
    ".cache": true,
    ".editorconfig": true,
    ".eslintcache": true,
    ".git": true,
    ".gitattributes": true,
    ".prettierignore": true,
    ".yarn": true,
    "LICENSE": true,
    "yarn.lock": true
  },
  "search.exclude": {
    "**/dist/": true,
    "**/yarn-error.log": true,
    "**/yarn.lock": true,
    "**/.yarn": true,
    "**/.pnp.*": true
  },
}
